  body 

    // Encabezado
    header.header_text
      nav.nav
        span#titulo #{title}
        
        // Navegadores
        ul.nav__list
          li
            a(href='/') Inicio
          li
            a(href='/store') Catalogo

          if userId
            li 
              a(href='/userView') Perfil 
            li 
              a(href='/logout') Cerrar Sesion 
          else 
            li
              a(href='/register') Registrate
            li
              a(href='/login') Iniciar sesion
    // Encabezado responsive
    header.header_img
      nav.nav_img
        span#titulo_img Antojitos Frit

        ul.nav_img__list
          li
            a(href='./')
              img(src='../assets/img/home.png')
          li
            a(href='./store')
              img(src='../assets/img/carrito.png')
          li
            a(href='./register')
              img(src='../assets/img/agregar.png')
          li
            a(href='./login')
